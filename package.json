{
  "name": "ba-salons",
  "version": "1.0.0",
  "description": "BA Salons website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass -w styles/sass/main.scss styles/styles.css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "build": "envsub --env-file .env index.html dist/index.html && rollup -c && node-sass styles/sass/main.scss dist/styles/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thepunkyone/ba-salons.git"
  },
  "keywords": [
    "html",
    "scss",
    "js",
    "static",
    "site"
  ],
  "author": "Vitnija Bluzma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thepunkyone/ba-salons/issues"
  },
  "homepage": "https://github.com/thepunkyone/ba-salons#readme",
  "devDependencies": {
    "envsub": "^4.0.7",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.29.0",
    "rollup-plugin-svg": "^2.0.0"
  }
}
